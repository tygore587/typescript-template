{
  "name": "typescript-template",
  "version": "1.0.0",
  "description": "This is a template to start a typescript project.",
  "main": "src/index.ts",
  "scripts": {
    "build": "rimraf dist && tsc",
    "clean": "rimraf dist && rimraf coverage",
    "coverage": "rimraf coverage && jest --coverage",
    "dev": "nodemon $npm_package_main",
    "debug": "nodemon --inspect $npm_package_main",
    "docker": "docker buildx build -t $npm_package_name:$npm_package_version -t $npm_package_name .",
    "lint": "prettier . --write",
    "prepare": "node .husky/install.mjs",
    "start": "node dist/index.js",
    "test": "jest"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
